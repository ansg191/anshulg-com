---
import { AstroFont } from "astro-font";
import { join } from "node:path";

interface Props {
  title: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="sitemap" href="/sitemap-index.xml" />
  <meta name="generator" content={Astro.generator} />
  <meta name="description" content="Anshul Gupta's personal website" />
  <AstroFont
    config={[
      {
        name: "JetBrains Mono",
        src: [
          {
            weight: "400",
            style: "normal",
            path: join(process.cwd(), "public", "fonts", "JetBrainsMono.woff2")
          }
        ],
        preload: true,
        display: "swap",
        fallback: "monospace",
        cssVariable: "jetbrains-mono"
      }
    ]}
  />
  <title>{title}</title>
</head>
<body>
<slot />
</body>
</html>

<style>
  html,
  body {
    margin: 0;
    /* width: 100%;
    height: 100%; */
  }
</style>
